<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="@dimen/fragm1_height"
                                                   android:background="@color/purple_200">

    <Button
            android:text="@string/btn1Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="68dp"
            android:layout_marginStart="68dp" android:layout_marginTop="48dp" app:backgroundTint="@color/red"/>
    <Button
            android:text="@string/btn2Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn2"
            app:layout_constraintStart_toEndOf="@+id/btn1" android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp" app:layout_constraintTop_toTopOf="@+id/btn1"
            app:backgroundTint="@color/green"/>
</androidx.constraintlayout.widget.ConstraintLayout>